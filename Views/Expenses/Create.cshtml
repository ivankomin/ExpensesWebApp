@model ExpensesWebApp.Models.Expense

@{
    ViewData["Title"] = "Create";
}

<h1>Create new expense</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseCategory" class="control-label">Category</label>
                <select asp-for="ExpenseCategoryId" asp-items="ViewBag.CategoryOptions" class="form-control">
                    <option value="" disabled selected hidden>Select Category</option>
                </select>
                <span asp-validation-for="ExpenseCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseSum" class="control-label">Sum</label>
                <input asp-for="ExpenseSum" class="form-control" />
                <span asp-validation-for="ExpenseSum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseDate" class="control-label">Date</label>
                <input asp-for="ExpenseDate" class="form-control" id="expenseDateInput" type="date" />
                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" id="useTodayCheckbox" class="form-check-input" />
                <label for="useTodayCheckbox" class="form-check-label">Or use today's date instead</label>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Add a Note (Optional)</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Add any additional notes about this expense..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
