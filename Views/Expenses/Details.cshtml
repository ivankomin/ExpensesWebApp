@model ExpensesWebApp.Models.Expense

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Expense</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseCategory.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExpenseSum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpenseSum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedAt.ToString("g")
        </dd>
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
